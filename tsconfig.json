{
  "compilerOptions": {
    "target": "ES6",
    "module": "System",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./app/js",
    "rootDir": "./app/ts",
    "strictNullChecks": true,
    "experimentalDecorators": true
  },
  "include": [
    "app/ts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
